<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PDC_03_MOD3.activity6">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Manipulating Images!"/>
            <Image Source="https://scx2.b-cdn.net/gfx/news/2020/newprotected.jpg"
                   Aspect="Fill"
                   HorizontalOptions="CenterAndExpand"
                   VerticalOptions="Center"
                   HeightRequest="{OnPlatform iOS=300, Android=250}"/>
            <StackLayout>
                <Button x:Name="BtnConnect" Text="Connect"></Button>
            </StackLayout>
            <ActivityIndicator IsRunning="{Binding IsBusy}" Color="Blue" HorizontalOptions="Center"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>